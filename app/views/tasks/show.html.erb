<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p>Completed: <%= @task.completed %></p>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<br>

<p><%= link_to "Edit task", edit_path %></p>

<p><%= link_to "Back to list", "/tasks" %></p>